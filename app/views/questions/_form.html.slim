.col-lg-4
  = nested_form_for question, remote: remote do |f|
    .question-errors
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .form-group
      = f.label :body
      = f.text_area :body, class: 'form-control', rows: 5
    .form-group
      = render 'shared/attachment_fields', f: f
    = f.submit 'Create', class: 'btn btn-default'