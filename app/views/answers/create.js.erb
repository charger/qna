<% if @answer.errors.present? %>
    <% @answer.errors.full_messages.each do |message| %>
        $('.answer-errors').html('<%= j message %>');
    <% end %>
<% else %>
    $('#answers').append('<%= j render 'answer', answer: @answer %>');
    $('.form-control#answer_body').val('');
    $(".form-group#attachments").find("input").val('');
    $(".form-group#attachments .fields:not(:first)").remove();
<% end %>